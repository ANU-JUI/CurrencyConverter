<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#318E35"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                  Currency Exchange"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="#1C1A1A"
        android:background="#B5FAB8"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#86BA88"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_height="300dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:hint="   Enter the amount"
            android:id="@+id/amt"
            android:background="@color/white"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:text="  Enter source \n  country"
            android:background="#4FE91E63"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text=" Enter destination \n  country"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:background="#4FE91E63"
            android:layout_marginLeft="180dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="230dp"
            android:padding="10dp"
            android:text="          TOTAL VALUE = "
            android:textStyle="bold"
            android:background="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total"
            android:layout_marginTop="240dp"
            android:textStyle="bold"
            android:layout_marginLeft="160dp"
            />

        <EditText
            android:id="@+id/source"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:hint=""
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp" />
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:hint=""
            android:layout_marginLeft="180dp"
            android:id="@+id/des"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="140dp"
            android:textColor="@color/black"
            android:id="@+id/convert"
            android:backgroundTint="#B5FAB8"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>